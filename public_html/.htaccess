# Farhan Logistics - Basic Routing Configuration
# Minimal .htaccess for cPanel compatibility

# Enable URL Rewriting
RewriteEngine On

# Prevent directory browsing
Options -Indexes

# Set default page
DirectoryIndex index.php index.html

# UTF-8 Encoding
AddDefaultCharset UTF-8

# Protect sensitive files
<FilesMatch "^(\.htaccess|\.env|composer\.json|db\.php|security\.php)$">
    Require all denied
</FilesMatch>

# Block access to SQL and config files
<FilesMatch "\.(sql|bak|backup|config|ini)$">
    Require all denied
</FilesMatch>

# =============================================
# URL ROUTING - Route all requests through router.php
# =============================================

# Don't rewrite static files (CSS, JS, images, fonts, PDFs)
RewriteCond %{REQUEST_URI} \.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot|webp|pdf|map)$ [NC]
RewriteRule ^ - [L]

# Don't rewrite if file exists
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Don't rewrite if directory exists
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route everything else through router.php
RewriteRule ^(.*)$ router.php [QSA,L]
